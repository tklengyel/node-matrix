{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "typeRoots": ["/matrix/node_modules/@types", "node_modules/@types"]
  },
  "exclude": ["*.test.js", "node_modules"]
}
